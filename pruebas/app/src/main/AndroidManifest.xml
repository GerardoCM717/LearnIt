<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="LearnIt"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pruebas"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad de inicio de sesión -->
        <activity android:name=".LoginActivity" />

        <!-- Actividad del menú principal -->
        <activity android:name=".MenuActivity" />

        <!-- Otras actividades -->
        <activity android:name=".LessonsActivity" />
        <activity android:name=".GamesActivity" />
        <activity android:name=".HockeyActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".BasicPhrasesActivity"/>
        <activity android:name=".VocabularyActivity"/>
        <activity android:name=".ReadingGameActivity"/>
        <activity android:name=".PhraseGuessActivity"/>
        <activity android:name=".MemoryGameActivity"/>
        <activity android:name=".CrosswordGameActivity"/>
        <activity android:name=".WordsActivity"/>
        <activity android:name=".PronunciationGameActivity"/>



    </application>

</manifest>